#homepage {
	font-family: 'Roboto', sans-serif;

	.section {
		text-align: center;

		h1 {
			font-size: 100px;		
			font-weight: 900;
			text-shadow: 0px 1px 0px rgba(255,255,255,.3), 0px -1px 0px rgba(0,0,0,.7);
		}

		h2  {
			font-size: 26px;
		    font-weight: 400;
		    text-shadow: 0px 1px 0px rgba(255, 255, 255, 0.3), 0px -1px 0px rgba(0, 0, 0, 0.7);
		    margin-top: 26px;
		}

		.quote {
			font-style: italic;
		}

		.image-text-content {
			display: table;
			margin: auto;

			.text-holder, .image-holder {
				display: table-cell;
				vertical-align: middle;
			}

			.text-holder {
				width: 600px;
	    	    font-size: 18px;
				line-height: 25px;
				text-align: justify;
			    font-weight: 400;
			    text-shadow: 0px 1px 0px rgba(255, 255, 255, 0.3), 0px -1px 0px rgba(0, 0, 0, 0.7);
			    padding-left: 50px;
			    padding-right: 50px;

			    p {
			    	margin-bottom: 10px;
			    	
			    	&:last-of-type {
			    		margin-bottom: 0px;
			    	}
			    }
			}
		}
	}


	.section:nth-of-type(1) {
		background-color: #0E9EB9;
		color: #007186;
	}


	.section:nth-of-type(2) {
		background-color: #E36C3C;
		color: #CD3A00;
	}

	.section:nth-of-type(3) {
		background-color: #CD9DBF;
		color: #8E2B70;

		a {
			color: #8E2B70;
		}
	}


	.section:nth-of-type(4) {
		background: #1BBC9B;
		color: #009679;	
	}


	.section:nth-of-type(5) {
		background: #FFCD13;
		color: #D1A400;
	}
}


body #fp-nav ul li a span {
	background-color: rgba(255, 255, 255, .55);
}